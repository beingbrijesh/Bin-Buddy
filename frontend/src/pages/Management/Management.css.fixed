  background: linear-gradient(135deg, var(--primary-dark), var(--primary));
  transform: translateY(-4px) scale(1.03);
  box-shadow: 0 10px 20px rgba(31, 138, 76, 0.35);
}

.profile-header-actions .action-btn.primary:hover:before {
  left: 150%;
}

